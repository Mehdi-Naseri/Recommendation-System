<form asp-action="Recommendations" method="post">
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="supportPercentage">Min Support (%)</label>
        <div class="col-md-2">
            <input id="supportPercentage" name="supportPercentage" type="number" class="form-control" min="0" max="100" step="0.5" value="1" />
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="confidence">Min Confidence (%)</label>
        <div class="col-md-2">
            <input id="confidence" name="confidence" type="number" class="form-control" min="0" max="100" step="1" value="30" />
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="startDate">Recommendation start date</label>
        <div class="col-md-2">
            <input type="date" id="startDate" name="startDate" class="form-control" width="2" value="2010-12-01">
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="endDate">Recommendation end date</label>
        <div class="col-md-2">
            <input type="date" id="endDate" name="endDate" class="form-control" width="2" value="2011-10-31">
        </div>
    </div>
