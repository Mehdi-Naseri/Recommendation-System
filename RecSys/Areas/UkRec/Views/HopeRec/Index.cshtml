
@{
    ViewData["Title"] = "Index";
}

<h2>HOPE recommendation</h2>

<form asp-action="Recommendations" method="post">
    <div class="form-group row">
        <label class="form-control-label col-md-3" for="recommendationNumber">Recommendation number</label>
        <div class="col-md-1">
            <input type="number" id="recommendationNumber" name="recommendationNumber" class="form-control" width="2" value="50">
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-3" for="startDate">Recommendation start date</label>
        <div class="col-md-2">
            <input type="date" id="startDate" name="startDate" class="form-control" width="2" value="2010-12-01">
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-3" for="endDate">Recommendation end date</label>
        <div class="col-md-2">
            <input type="date" id="endDate" name="endDate" class="form-control" width="2" value="2011-10-31">
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-3" for="cfWeight">CF weight</label>
        <div class="col-md-1">
            <input type="number" id="cfWeight" name="cfWeight" class="form-control" value="5">
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-3" for="spmWeight">SPM weight</label>
        <div class="col-md-1">
            <input type="number" id="spmWeight" name="spmWeight" class="form-control" value="5">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3"></div>
        <button type="submit" class="btn btn-primary">Recommend</button>
    </div>
</form>

