@{
    ViewData["Title"] = "UK Retail Sequential Patterns";
}

<h2> Sequential Pattern Mining Rcommendation</h2>

@*======================================================================================================*@
@*=========================     Sequential Pattern Mining    ===========================================*@
@*======================================================================================================*@

<form asp-action="Recommendations" method="post">
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="support">Min Support</label>
        <div class="col-md-2">
            <input id="support" name="support" type="number" class="form-control" min="0" max="100" step="1" value="10" />
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="sonfidence">Min Confidence (%)</label>
        <div class="col-md-2">
            <input id="confidence" name="confidence" type="number" class="form-control" min="0" max="100" step="1" value="0" />
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="kvalue">Training start date</label>
        <div class="col-md-2">
            <input type="date" id="startDate" name="startDate"  class="form-control" width="2" value="2010-12-01">
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="kvalue">Training end date</label>
        <div class="col-md-2">
            <input type="date" id="endDate" name="endDate" class="form-control" width="2" value="2011-10-31">
            @*<input type="date" id="endDate" name="endDate" class="form-control" width="2" value="2010-12-02">*@
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="interval">Interval</label>
        <div class="col-md-2">
            <select id="interval" name="interval" class="form-control">
                <option>Daily</option>
                <option>Weekly</option>
                <option selected>Monthly</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="form-control-label col-md-2" for="inputSuccess1">SPM Method</label>
        <div class="col-md-5">
            <select id="spmMethod" name="spmMethod" class="form-control">
                <option>GSP - Generalized sequential Pattern</option>
                <option>PrefixSpan - Prefix Projected Pattern Growth</option>
                <option>SPAM - Sequential PAttern Mining using A Bitmap Representation</option>
                <option>LAPIN-SPAM - LAst Position INduction Sequential PAttern Mining</option>
                <option>BIDE - BI-Directional Extension pattern closure checking</option>
            </select>
        </div>
    </div>
    <button id="SpmSubmit" type="submit" class="btn btn-primary">Recommend</button>
</form>
