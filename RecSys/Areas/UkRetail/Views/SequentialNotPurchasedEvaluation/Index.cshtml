
@{
    ViewData["Title"] = "Index";
}

<h2>Sequential Pattern Mining Recommendation Evaluation - Not Purchased</h2>

<form asp-action="EvaluationResults" method="post">
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="kvalue">Recommendation number</label>
        <div class="col-md-1">
            <input type="number" id="recommendationNumber" name="recommendationNumber" class="form-control" width="2" value="50">
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="kvalue">Train start date</label>
        <div class="col-md-2">
            <input type="date" id="trainStartDate" name="trainStartDate" class="form-control" width="2" value="2010-12-01">
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="kvalue">Train end date</label>
        <div class="col-md-2">
            <input type="date" id="trainEndDate" name="trainEndDate" class="form-control" width="2" value="2011-09-30">
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="kvalue">Test start date</label>
        <div class="col-md-2">
            <input type="date" id="testStartDate" name="testStartDate" class="form-control" width="2" value="2011-10-01">
        </div>
    </div>
    <div class="form-group row">
        <label class="form-control-label col-md-2" for="kvalue">Test end date</label>
        <div class="col-md-2">
            @*<input type="date" id="endDate" name="endDate"  class="form-control" width="2" value="2011-10-31">*@
            <input type="date" id="testEndDate" name="testEndDate" class="form-control" width="2" value="2011-10-30">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Calculate Accuracy</button>
</form>


